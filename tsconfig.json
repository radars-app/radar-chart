{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"lib": [
			"es2018",
			"dom"
		],
		"esModuleInterop": true
	},
	"include": [
		"./**/*.ts",
		"src/index.ts"
	],
	"exclude": [
			"node_modules",
	]
}
